<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Furniture Types</h1>

<% if session[:user_role_id] %>
  <%= button_to 'New Furniture type', new_furniture_type_path, method: :get %>
<% end %>

  <tbody>
    <% @furniture_types.each do |furniture_type| %>
      <div class = "panel panel-default item col-xs-6 col-md-4 col-lg-2 class-pad">
        <center><%= link_to image_tag(furniture_type.furniture_type_image(:small), class: "img-thumbnail img-responsive img-rounded"), products_path(:furniture_type => furniture_type.furniture_class)%><br>
        <%= link_to furniture_type.furniture_class+'s', products_path(:furniture_type => furniture_type.furniture_class) %><br>
        <% if session[:user_role_id] %>
          <%#= furniture_type.furniture_room_for_class %>
          <%= button_to 'Edit', edit_furniture_type_path(furniture_type), method: :get %><br>
          <%= button_to 'Destroy', furniture_type, method: :delete, data: { confirm: 'Are you sure?' } %></center>
        <% end %>
      </div>
    <% end %>
  </tbody>
</table>

<br>

</div>
