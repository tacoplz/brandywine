<div class="container">
  <% if notice %>
    <div class="bg-success">
      <center><b><p id="notice"><%= notice %></p></b></center>
    </div>
  <% end %>


<tr>
  <td><h3><%= @blog.title %></h3><td>
  <td><h5><%= @blog.created_at.strftime("%B %d, %Y") %></h5></td>
</tr>


<center><p>
  <%= image_tag(@blog.blog_image(:large), class: "img-responsive img-rounded") %>
</p></center><br>

<p>
  <%= simple_format(@blog.blog_post) %>
</p>

<% if session[:user_role_id] %>
  <%= button_to 'Edit', edit_blog_path(@blog), method: :get, class: "btn" %>
<% end %>
</div>
