<div class="container">
<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title , style: "width: 80%;", class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :blog_image %><br>
    <%= f.file_field :blog_image, class: "form-control", style: "width: 80%;" %>
  </div>
  <div class="field">
    <%= f.label :blog_post %><br>
    <%= f.text_area :blog_post, rows: "10", style: "width: 80%;", class: "form-control"  %>
  </div>
  <div class="actions", align="right", style="padding-right: 20%;">
    <%= f.submit "Submit Blog Post", class: "btn"%>
  </div>
<% end %>
</div>
