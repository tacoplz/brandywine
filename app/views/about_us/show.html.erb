<center><b><p id="notice"><%= notice %></p></b></center>

<p>
  <center><%= image_tag @about_u.about_us_image(:banner) %></center>
</p>
<p>
  <center><strong>Current Hours:</strong><br>
  <%= simple_format(@about_u.hours) %></center>
</p>
<p>
  <center><strong>About Us:</strong></center><br>
  <%= simple_format(@about_u.body) %>
</p>
<p>
  <b><strong>Phone Number:</strong></b>
  <%= number_to_phone(@about_u.phone_number) %>
</p>
<p>
  <strong>Email:</strong>
  <%= @about_u.email %>
</p>

<p>
  <strong>Address:</strong>
  <%= link_to "#{@about_u.address}", "http://maps.google.com/?q=#{@about_u.address}" %>
</p>

<!DOCTYPE html>
  <head>
    <title>Simple Map</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <style>
       html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 50%;
        margin-right: 10%;
        margin-left: 10%;
      }
    </style>
  </head>
  <body>
  <div id="map"></div>
  <script>
    var map;
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: 40.519549, lng: -81.5380797},
        zoom: 17
      });
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCw7D_RQvXe704EsX6ktnV_tEpMMDYmfng&callback=initMap"
  async defer></script>
  </body>
</html>
