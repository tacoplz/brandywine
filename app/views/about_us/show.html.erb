<div class="container">
  <% if notice %>
    <div class="bg-success">
      <center><b><p id="notice"><%= notice %></p></b></center>
    </div>
  <% end %>

<% if session[:user_role_id] %>
  <br>
  <%= button_to 'Edit', edit_about_u_path(@about_u), method: :get, class: 'btn' %><br><br>
<% end %>
<br>
<div class="panel panel-default">
    <div class="panel-heading" >
    <center><strong>Hours*:</strong><br></center>
    <center>*Please check the <b><%= link_to('home page', homepage_posts_path) %></b> for seasonal, holiday, or family closures before planning a trip.</center>
    </div>
    <div class="panel-body">
    <center><%= simple_format(@about_u.hours) %></center>
  </div>
</div>
<p>
  <center><%= image_tag(@about_u.about_us_image(:banner), class: "img-responsive img-rounded" )%></center>
</p>
<div class="panel panel-default">
  <div class="panel-heading">
    <center><strong>About Us:</strong></center>
  </div>
  <div class="panel-body">
    <%= simple_format(@about_u.body) %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <center><strong>Contact Us:</strong></center>
  </div>
  <div class="panel-body">
  <b><strong>Phone Number:</strong></b>
  <%= number_to_phone(@about_u.phone_number) %><br>
  <strong>Email:</strong>
  <%= @about_u.email %><br>
  <strong>Address:</strong>
  <%= link_to "#{@about_u.address}", "http://maps.google.com/?q=#{@about_u.address}" %>
  </div>
</div>
</div>
<!DOCTYPE html>
  <head>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <style>
       html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 50%;
        margin-right: 10%;
        margin-left: 10%;
      }
    </style>
  </head>
  <body>
  <div id="map"></div>
  <script>
    var map;
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: 40.519549, lng: -81.5380797},
        zoom: 17
      });
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCw7D_RQvXe704EsX6ktnV_tEpMMDYmfng&callback=initMap"
  async defer></script>
  </body>
</html>
<br>
