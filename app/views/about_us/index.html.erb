<p id="notice"><%= notice %></p>

<h1>About Us Entry</h1>

<table>
  <thead>
    <tr>
      <th>About Us Image</th>
      <th>Body</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @about_us.each do |about_u| %>
      <tr>
        <td><%= image_tag about_u.about_us_image(:thumb) %></td>
        <td><%= about_u.body %></td>
        <td><%= about_u.phone_number %></td>
        <td><%= about_u.email %></td>
        <td><%= link_to 'Show', about_u %></td>
        <td><%= link_to 'Edit', edit_about_u_path(about_u) %></td>
        <td><%#= link_to 'Destroy', about_u, method: :delete, data: { confirm: 'Destroying this "About Us" entry will cause serious damage to the web page and will require contacting the developer to fix. Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @about_us.all == 0 %>
<%= link_to 'New About Us', new_about_u_path %>
<% end %>
