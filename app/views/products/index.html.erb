<div class="container">
<p id="notice"><%= notice %></p>

<h2>Browse Furniture</h2>

<% if session[:user_role_id] %>
  <%= button_to 'New Product', new_product_path, method: :get %>
<% end %>

  <tbody>
    <% @products.each do |product| %>
      <div class = "panel panel-default item col-xs-6 col-md-4 col-lg-2 class-pad">
        <br><center><%= link_to image_tag(product.image(:small), class: "img-thumbnail img-responsive img-rounded"), product%>
        <%= button_to product.title, product, method: :get %></center><br>
        <div class='container'>
        Style: <%= product.furniture_style %><br>
        <%#= product.room_for_furniture %>
        <%#= product.furniture_type %>
        Wood Type: <%= product.furniture_wood %><br>
        Stain: <%= product.furniture_stain %><br>
        Dimensions: <%= product.furniture_dimensions %><br><br>
        </div>
      <center>
        <% if session[:user_role_id]%>
          <%= button_to 'Edit', edit_product_path(product), method: :get %><br>
          <%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% elsif session[:user_id] %>
            <%# cart = Cart.find_by(id: session[:cart_id]) %>
            <%# if Cart.find_by(user_id: session[:user_id]) %>
          <% cart = Cart.find_by(user_id: session[:user_id]) %>
          <% if LineItem.find_by(cart_id: cart.id, product_id: product.id) %>
            <%= button_to 'Item In My Furniture List', cart_path(Cart.find_by(user_id: session[:user_id])), method: :get %>
          <% else %>
            <%= button_to "Add to My Furniture List", line_items_path(cart_id: cart.id, product_id: product.id) %>
          <% end %></center>
        <% elsif session[:cart_id] %>
          <% cart = Cart.find_by(id: session[:cart_id])%>
          <% if LineItem.find_by(cart_id: cart.id, product_id: product.id) %>
            <%= button_to 'Item In My Furniture List', cart_path(Cart.find_by(id: session[:cart_id])), method: :get %>
          <% else %>
            <%= button_to "Add to My Furniture List", line_items_path(cart_id: cart.id, product_id: product.id) %>
          <% end %></center>
        <% end %>

          <%# else %>
            <%#= button_to 'Add to My Furniture List', line_items_path(product_id: product.id) %>
          <%# end %>

      </div>
    <% end %>
  </tbody>
</table>

<br>

</div>
