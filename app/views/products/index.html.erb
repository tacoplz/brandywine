<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Room for furniture</th>
      <th>Furniture type</th>
      <th>Furniture wood</th>
      <th>Furniture stain</th>
      <th>Furniture dimensions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product %></td>
        <td><%= product.description %></td>
        <td><%= image_tag product.image(:thumb)%></td>
        <td><%= product.room_for_furniture %></td>
        <td><%= product.furniture_type %></td>
        <td><%= product.furniture_wood %></td>
        <td><%= product.furniture_stain %></td>
        <td><%= product.furniture_dimensions %></td>
        <td><%= button_to 'Add to My Furniture List', line_items_path(product_id: product.id) %></td>
        <% if session[:user_id] %>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if session[:user_id] %>
  <%= link_to 'New Product', new_product_path %>
<% end %>
