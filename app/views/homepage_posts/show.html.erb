<div class="container">
  <% if notice %>
    <div class="bg-success">
      <center><b><p id="notice"><%= notice %></p></b></center>
    </div>
  <% end %>

<p>
  <strong>Title:</strong><br>
  <%= @homepage_post.post_title %>
</p>

<p>
  <strong>Post:</strong><br>
  <%= @homepage_post.post_text %>
</p>


<% if session[:user_role_id] %>
  <%= button_to 'Edit', edit_homepage_post_path(@homepage_post), method: :get, class: "btn" %>
<% end %>
</div>
