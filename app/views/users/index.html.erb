<h1>Listing Users</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div class="adminbutton" >
<%= link_to 'Create User', new_user_path, class: 'btn' %>
<%#= link_to 'Back', users_path, class: 'btn' %>
</div>

<div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.last_name%>, <%= user.first_name %></td>
        <td><%= link_to 'Info', user, class: 'btn' %></td>
        <td><%#= link_to 'Edit', edit_user_path(user), class: 'btn' %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
