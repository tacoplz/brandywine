<div class="container">
<h1>Listing Users</h1>
<% if notice %>
  <div class="bg-success">
    <center><b><p id="notice"><%= notice %></p></b></center>
  </div>
<% end %>
<div class="adminbutton" >
  <% if session[:user_role_id] %>
    <%= button_to 'Create User', new_user_path, method: :get, class: 'btn' %>
    <%#= link_to 'Back', users_path, class: 'btn' %>
  <% end %>

</div>

<div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.last_name%>, <%= user.first_name %></td>
        <td><%= user.name %>
        <td><%= link_to 'Info', user, class: 'btn' %></td>
        <td><%#= link_to 'Edit', edit_user_path(user), class: 'btn' %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
