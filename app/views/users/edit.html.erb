<div class="container">
<br><center><b><p id="notice"><%= notice %></p></b></center>
<% if session[:update_email] %>
  <h1>Update Email Address</h1>
  <%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :email, 'Email:' %><br>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit "Submit", class: 'btn' %>
    </div>
  <% end %>
<% else %>
  <h1>Editing User</h1>
  <%= render 'form' %>
<% end %>

<%#= link_to 'Show', @user %>
<%#= link_to 'Back', users_path %>
</div>
