<p>
  <p>
    <%# if you want to see the image url %>
    <%#= @user.user_image(:small) %>
    <td><%= image_tag @user.user_image(:small) %>
  </p>
  <p>
    <strong>Username:</strong>
    <%= @user.name %>
  </p>
  <p>
    <strong>Customer Name:</strong>
    <%= @user.first_name %> <%= @user.last_name %>
